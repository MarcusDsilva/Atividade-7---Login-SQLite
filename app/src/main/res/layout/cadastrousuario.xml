<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Insira seu nome"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtLogin"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNome"
        android:layout_marginTop="40dp"
        android:text="Insira o Login"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtLogin"
        android:layout_marginTop="40dp"
        android:text="Insira a senha"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtsenha2"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSenha"
        android:layout_marginTop="40dp"
        android:text="Repita a senha"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="450dp"
        android:background="@color/cinza"
        android:text="Salvar"
        android:textSize="10dp" />

</RelativeLayout>